{
  "name": "root",
  "version": "0.0.0",
  "private": true,
  "author": "r4ai",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/r4ai/mercury.git"
  },
  "bugs": {
    "url": "https://github.com/r4ai/mercury/issues"
  },
  "type": "module",
  "workspaces": [
    "packages/*",
    "examples/*",
    "docs",
    "e2e"
  ],
  "scripts": {
    "check": "biome check .",
    "check:write": "biome check --write .",
    "typecheck": "turbo typecheck",
    "build": "turbo build",
    "test": "turbo test",
    "test:ci": "turbo test:ci",
    "e2e": "turbo e2e",
    "changeset": "changeset",
    "release": "bun run build && bun run publish",
    "publish": "for dir in packages/*; do (cd \"$dir\" && bun publish || true); done && changeset tag",
    "version": "changeset version && bun update",
    "prepare": "lefthook install",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "2.29.7",
    "lefthook": "1.13.6",
    "shadcn": "3.5.0",
    "turbo": "2.7.2"
  },
  "packageManager": "bun@1.1.32",
  "trustedDependencies": [
    "@biomejs/biome",
    "@swc/core",
    "@tailwindcss/oxide",
    "esbuild",
    "lefthook",
    "msw"
  ]
}
