{
  "extends": "@tsconfig/node16/tsconfig.json",
  "include": ["**/*.ts"],
  "compilerOptions": {
    // Enable latest features
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "bundler",

    // Bundler mode
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": false
  }
}
